.header
  .header__title
    %h1
      = link_to "News Pipicks", root_path, class: "header__title__font"
  .header__nav
    - if user_signed_in?
      .header__nav__user
        = link_to "#" do
          = image_tag "#", style: "width: 40px; height: 40px;"
      .header__nav__new-letter
        = link_to "投稿", new_letter_path, class: "header__nav__new-letter__font"
    - else
      .header__nav__regist
        = link_to "無料登録", new_user_registration_path, class: "header__nav__regist__font"
      .header__nav__login
        = link_to "ログイン", new_user_session_path, class: "header__nav__login__font"
