.header
  .header__title
    %h1
      = link_to "News Pipick", root_path, class: "header__title__font"
  .header__nav
    - if user_signed_in?
      .header__nav__user#user-header-image
        = link_to "", remote: true do
          = image_tag current_user.avatar.presence || "default_avatar.jpeg", class: "header__nav__user__avatar"
      .header__nav__new-letter#letter-new 投稿
    - else
      .header__nav__regist
        = link_to "無料登録", new_user_registration_path, class: "header__nav__regist__font"
      .header__nav__login
        = link_to "ログイン", new_user_session_path, class: "header__nav__login__font"
- if user_signed_in?
  #user-menu-container.user-menu
    .user-menu__user-name
      - if current_user.full_name.present?
        = link_to current_user.full_name, user_path(current_user), class: "user-menu__user-name__font"
      - else
        = link_to "No name", user_path(current_user), class: "user-menu__user-name__font"
    .user-menu__user-edit
      = link_to "設定", edit_user_path(current_user), class: "user-menu__user-edit__font"
    .user-menu__logout
      = link_to "ログアウト", destroy_user_session_path, method: :delete, class: "user-menu__logout__font"
  = render partial: "letters/new_modal"

