.user-container__user-box
  .user-container__user-box__user
    .user-container__user-box__user__right-info
      = image_tag @user.avatar.presence || "default_avatar.jpeg", class: "user-container__user-box__user__right-info__avatar"
    .user-container__user-box__user__left-info
      .user-container__user-box__user__left-info__name
        = @user.full_name.presence || "No name"
      .user-container__user-box__user__left-info__like-count
        %p 総 Like 数: #{@user.sum_like}
      .user-container__user-box__user__left-info__profile
        = @user.profile
