- if @better_letters.length >= 2
  .container__topics
    .container__topics__flame
      .container__topics__flame__main-flame
        %ul.bxslider
          - @better_letters.each do |letter|
            %li
              = link_to letter_path(letter), class: "container__topics__flame__main-flame__link" do
                = image_tag letter.image, class: "container__topics__flame__main-flame__link__image"
                .container__topics__flame__main-flame__link__picks-box
                  .container__topics__flame__main-flame__link__picks-box__cover
                    .container__topics__flame__main-flame__link__picks-box__cover__size
                      = letter.comments_count
                    .container__topics__flame__main-flame__link__picks-box__cover__picks
                      Picks
                .container__topics__flame__main-flame__link__title
                  - if letter.title.present?
                    = letter.title.truncate(40)
                  - else
                    = "No title"
                .container__topics__flame__main-flame__link__sub-info
                  .container__topics__flame__main-flame__link__sub-info__publisher
                    - if letter.site_name.present?
                      = letter.site_name.truncate(20)
                    - else
                      = "No site name"
                  .container__topics__flame__main-flame__link__sub-info__time
                    - if letter.created_in_24hours?
                      = "#{time_ago_in_words(letter.created_at)}Ââç"
                    - else
                      = letter.created_time
      .container__topics__flame__sub-flame
        .container__topics__flame__sub-flame__first
          = link_to letter_path(@better_letters[0]) do
            = image_tag @better_letters[0].image, class: "container__topics__flame__sub-flame__first__image"
            .container__topics__flame__sub-flame__first__title
              = @better_letters[0].title.truncate(40).presence || "No title"
        .container__topics__flame__sub-flame__second
          = link_to letter_path(@better_letters[1]) do
            = image_tag @better_letters[1].image, class: "container__topics__flame__sub-flame__second__image"
            .container__topics__flame__sub-flame__second__title
              = @better_letters[1].title.truncate(40).presence || "No title"
